    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "favicons": "^7.1.4",
    "glob": "^10.3.10",
    "htmlnano": "^2.1.0",
    "npm-run-all": "^4.1.5",
